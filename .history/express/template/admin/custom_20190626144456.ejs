<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>banner</title>
</head>
<body>
    <div class="page">
        <% include components/top.inc.ejs %>
        <div class="content-wrap">
            <div>
                <form action="?" method="post">
                    标题：<input type="text" name="title" /><br>
                    描述：<textarea name="description"></textarea><br>
                    头像：<input type="file" name="f1" enctype="multipart/form-data" /><br>
                    <input type="submit" value="添加">
                </form>
            </div>

            <table border="1" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>标题</th>
                        <th>描述</th>
                        <th>头像</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                <% for(let i=0; i<data.length; i++) {%>
                    <tr>
                        <td><%=data[i].ID%></td>
                        <td><%=data[i].title%></td>
                        <td><%=data[i].description%></td>
                        <td><%=data[i].src%></td>
                        <td>
                            <a href="?act=mod&id=<%=bannners[i].ID%>">修改</a>
                            <a href="?act=del&id=<%=bannners[i].ID%>" onclick="return confirm('确定要删除吗')">删除</a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
            <div>
            <% if (typeof mod_data != 'undefined') {%>
                <form action="?" method="post" enctype="multipart/form-data">
                <input type="hidden" name="mod_id" value="<%= mod_data.ID%>" />
                    标题：<input type="text" name="title" value="<%= mod_data.title%>" /><br>
                    描述：<textarea name="description" value="<%= mod_data.description%>"></textarea><br>
                    头像：<input type="file" name="f1" value="<%= mod_data.src%>" /><br>
                    <input type="submit" value="添加">
                </form>
            <% } %>
            </div>
        </div>
    </div>
</body>
</html>